<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bookom Bookstore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    @using Bookom.Models

    @RenderSection("styles", required: false)

    <style>
        .bg-gradient-success {
            background-color: #1cc88a;
            background-image: linear-gradient(180deg, #1cc88a 10%, #13855c 100%);
            background-size: cover;
        }

        .btn-primary {
            background-color: #13855c;
            border-color: #13855c;
        }

            .btn-primary:hover {
                background-color: #0e6645;
                border-color: #0e6645;
            }

        .sidebar-brand-text {
            font-weight: 800;
            letter-spacing: 1px;
        }

        .badge-counter {
            background-color: #e74a3b;
        }
    </style>

</head>
<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-success sidebar sidebar-dark accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Home")">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Bookom Store</div>
            </a>

            <hr class="sidebar-divider my-0">

            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-home"></i>
                    <span>Trang chủ</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseNSX"
                   aria-expanded="true" aria-controls="collapseNSX">
                    <i class="fas fa-fw fa-building"></i>
                    <span>Nhà Xuất Bản</span>
                </a>
                <div id="collapseNSX" class="collapse" aria-labelledby="headingNSX" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Các đối tác:</h6>

                        <a class="collapse-item" href="@Url.Action("SanPham", "Home", new { maNSX = 1 })">
                            NXB Kim Đồng
                        </a>

                        <a class="collapse-item" href="@Url.Action("SanPham", "Home", new { maNSX = 2 })">
                            NXB Trẻ
                        </a>

                        <a class="collapse-item" href="@Url.Action("SanPham", "Home", new { maNSX = 3 })">
                            Nhã Nam
                        </a>

                        <a class="collapse-item" href="@Url.Action("SanPham", "Home", new { maNSX = 4 })">
                            First News - Trí Việt
                        </a>

                        <a class="collapse-item" href="@Url.Action("SanPham", "Home", new { maNSX = 5 })">
                            NXB Văn Học
                        </a>
                    </div>
                </div>
            </li>

            <hr class="sidebar-divider">

            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-fw fa-envelope"></i>
                    <span>Liên hệ</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

        </ul>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 shadow">

                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <h5 class="m-0 font-weight-bold text-success d-none d-sm-block">Chào mừng đến với Bookom!</h5>
                    @using (Html.BeginForm("TimKiem", "Home", FormMethod.Get, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }))
                    {
                        <div class="input-group">
                            <input type="text" name="tuKhoa" class="form-control bg-light border-0 small" placeholder="Tìm tên sách..." aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" onclick="$(this).closest('form').submit();">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    }
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="@Url.Action("GioHang", "GioHang")" role="button">
                                <i class="fas fa-shopping-cart fa-fw text-gray-600"></i>

                                @{
                                    // Lấy giỏ hàng từ Session ra
                                    List<GioHang> gio = Session["GioHang"] as List<GioHang>;

                                    // Nếu giỏ có hàng thì tính tổng số lượng
                                    if (gio != null && gio.Count > 0)
                                    {
                                        int tongSoLuong = gio.Sum(n => n.iSoLuong);
                                        // Hiển thị số lượng lên Badge
                                        <span class="badge badge-danger badge-counter">@tongSoLuong</span>
                                    }
                                }
                            </a>
                        </li>

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <li class="nav-item dropdown no-arrow">
                            @if (Session["UserName"] != null)
                            {
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                        Xin chào, <b>@Session["UserName"]</b>
                                    </span>
                                    <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="@Url.Action("UserInfo", "KhachHang")">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Hồ sơ cá nhân
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("LichSuDonHang", "KhachHang")">
                                        <i class="fas fa-clipboard-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Đơn hàng của tôi
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Login")">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Đăng xuất
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center h-100">
                                    <a class="btn btn-sm btn-outline-success mr-2" href="@Url.Action("Login", "Login")">Đăng nhập</a>
                                    <a class="btn btn-sm btn-success" href="@Url.Action("Register", "Login")">Đăng ký</a>
                                </div>
                            }
                        </li>
                    </ul>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>

            </div>

            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Bookom Bookstore 2025</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/js/sb-admin-2.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>