@using Bookom.Models
@model List<GioHang>

@{
    ViewBag.Title = "Thanh toán đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow h-100 border-left-success">
            <div class="card-header bg-success text-white font-weight-bold">
                <i class="fas fa-shipping-fast mr-2"></i> THÔNG TIN GIAO HÀNG
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DatHang", "GioHang", FormMethod.Post))
                {
                    <div class="form-group bg-light p-3 rounded border">
                        <label class="font-weight-bold text-gray-800">Bạn muốn giao hàng đến đâu?</label>

                        <div class="custom-control custom-radio">
                            <input type="radio" id="diaChiMacDinh" name="LoaiDiaChi" class="custom-control-input" checked onchange="chonDiaChi(1)">
                            <label class="custom-control-label" for="diaChiMacDinh">
                                Dùng địa chỉ mặc định <span class="badge badge-success">Khuyên dùng</span>
                            </label>
                        </div>

                        <div class="custom-control custom-radio mt-2">
                            <input type="radio" id="diaChiMoi" name="LoaiDiaChi" class="custom-control-input" onchange="chonDiaChi(2)">
                            <label class="custom-control-label" for="diaChiMoi">
                                Giao đến địa chỉ khác
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="text-success font-weight-bold">Họ tên người nhận:</label>
                        <input type="text" name="HoTenKH" id="HoTenKH" class="form-control" required
                               value="@ViewBag.TenKH" readonly />
                    </div>

                    <div class="form-group">
                        <label class="text-success font-weight-bold">Số điện thoại:</label>
                        <input type="text" name="DienThoaiKH" id="DienThoaiKH" class="form-control" required
                               value="@ViewBag.SDT" readonly />
                    </div>

                    <div class="form-group">
                        <label class="text-success font-weight-bold">Địa chỉ nhận hàng:</label>
                        <input type="text" name="DiaChiKH" id="DiaChiKH" class="form-control" required
                               value="@ViewBag.DiaChi" readonly />
                    </div>

                    <div class="form-group">
                        <label class="text-success font-weight-bold">Ghi chú (tùy chọn):</label>
                        <textarea class="form-control" rows="2" placeholder="Ví dụ: Gọi trước khi giao..."></textarea>
                    </div>

                    <hr />

                    <button type="submit" class="btn btn-success btn-lg btn-block shadow" onclick="return confirm('Xác nhận đặt hàng?');">
                        <i class="fas fa-check-circle mr-2"></i> HOÀN TẤT ĐƠN HÀNG
                    </button>

                    <a href="@Url.Action("GioHang", "GioHang")" class="btn btn-outline-secondary btn-block mt-3">
                        <i class="fas fa-arrow-left mr-2"></i> Quay lại giỏ hàng
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-light font-weight-bold text-gray-800">
                <i class="fas fa-receipt mr-2"></i> TÓM TẮT ĐƠN HÀNG
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-center" width="100%" cellspacing="0">
                        <thead class="bg-gray-200 text-gray-800">
                            <tr>
                                <th>Sách</th>
                                <th>SL</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-left align-middle">
                                        <div class="d-flex align-items-center">
                                            <img src="@Url.Content("~/Content/img/" + item.sAnhBia)"
                                                 width="50" height="70" class="rounded border mr-2" style="object-fit: cover;">
                                            <span class="small font-weight-bold text-truncate" style="max-width: 150px;">
                                                @item.sTenSach
                                            </span>
                                        </div>
                                    </td>
                                    <td class="align-middle">@item.iSoLuong</td>
                                    <td class="align-middle font-weight-bold text-danger">
                                        @String.Format("{0:0,0}", item.dThanhTien)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <hr class="sidebar-divider">

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h5 class="font-weight-bold text-gray-800">Tổng cộng:</h5>
                    <h3 class="font-weight-bold text-danger">
                        @String.Format("{0:0,0} VNĐ", ViewBag.TongTien)
                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function chonDiaChi(loai) {
        var txtTen = document.getElementById("HoTenKH");
        var txtSDT = document.getElementById("DienThoaiKH");
        var txtDiaChi = document.getElementById("DiaChiKH");

        if (loai == 1) {
            // Chọn Mặc định: Điền lại dữ liệu cũ và KHÓA ô nhập
            txtTen.value = "@Html.Raw(ViewBag.TenKH)";
            txtSDT.value = "@Html.Raw(ViewBag.SDT)";
            txtDiaChi.value = "@Html.Raw(ViewBag.DiaChi)";

            txtTen.setAttribute("readonly", "readonly");
            txtSDT.setAttribute("readonly", "readonly");
            txtDiaChi.setAttribute("readonly", "readonly");
        }
        else {
            // Chọn Mới: Xóa trắng và MỞ KHÓA ô nhập
            txtTen.value = "";
            txtSDT.value = "";
            txtDiaChi.value = "";

            txtTen.removeAttribute("readonly");
            txtSDT.removeAttribute("readonly");
            txtDiaChi.removeAttribute("readonly");

            // Focus vào ô tên để nhập cho nhanh
            txtTen.focus();
        }
    }
</script>