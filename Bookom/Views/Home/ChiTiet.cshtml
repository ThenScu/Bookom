@model Bookom.Models.SACH

@{
    ViewBag.Title = "Chi tiết: " + Model.TENSACH;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4 border-left-success">
    <div class="card-body">

        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-sm btn-outline-success mb-4">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>

        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@(string.IsNullOrEmpty(Model.ANHBIA) ? "https://dummyimage.com/300x450/cccccc/000000&text=No+Image" : Url.Content("~/Content/img/" + Model.ANHBIA))"
                     class="img-fluid rounded shadow-lg"
                     alt="@Model.TENSACH"
                     style="max-height: 450px; object-fit: cover;">
            </div>

            <div class="col-md-8">
                <h2 class="font-weight-bold text-success">@Model.TENSACH</h2>

                <h5 class="text-gray-700 mb-3">
                    <i class="fas fa-pen-nib mr-2"></i>Tác giả: <b>@Model.TACGIA</b>
                </h5>

                <h3 class="text-danger font-weight-bold mb-4">
                    @String.Format("{0:0,0}", Model.GIA) VNĐ
                </h3>

                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <td class="font-weight-bold" style="width: 150px;">Nhà xuất bản:</td>
                            <td>
                                @(Model.NHASANXUAT != null ? Model.NHASANXUAT.TENNSX : "Đang cập nhật")
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Thể loại:</td>
                            <td>
                                @(Model.THELOAI != null ? Model.THELOAI.TENTL : "Đang cập nhật")
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Tình trạng:</td>
                            <td>
                                @if (Model.SOLUONG > 0)
                                {
                                    <span class="badge badge-success">Còn hàng (@Model.SOLUONG bản)</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Hết hàng</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mb-4">
                    <h5 class="font-weight-bold text-gray-800">Giới thiệu sách:</h5>
                    <p class="text-justify text-gray-600">
                        Đây là một trong những cuốn sách bán chạy nhất tại Bookom Store.
                        Nội dung hấp dẫn, hình ảnh sắc nét, phù hợp với mọi lứa tuổi.
                        Hãy đặt mua ngay hôm nay để nhận được ưu đãi tốt nhất!
                    </p>
                </div>

                <div class="form-group">
                    <a href="@Url.Action("ThemGioHang", "GioHang", new { maSach = Model.MASACH, strURL = Request.Url.ToString() })" class="btn btn-success btn-lg btn-icon-split shadow-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-cart-plus"></i>
                        </span>
                        <span class="text">Thêm vào giỏ hàng</span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>