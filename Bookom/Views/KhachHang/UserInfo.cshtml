@model Bookom.Models.ACCOUNT
@{
    ViewBag.Title = "Cập nhật hồ sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center py-4">
                    <h3 class="font-weight-light my-2">
                        <i class="fas fa-user-edit mr-2"></i>Chỉnh Sửa Thông Tin
                    </h3>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("Edit", "KhachHang", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.EMAIL)
                        @Html.HiddenFor(m => m.MAACCOUNT)
                        @Html.HiddenFor(m => m.PASSWORD)
                        @Html.HiddenFor(m => m.TYPEACCOUNT)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <div class="form-group mb-4">
                            <label class="small mb-1 font-weight-bold text-success">Email đăng nhập</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light"><i class="fas fa-envelope text-success"></i></span>
                                </div>
                                <input type="text" class="form-control" value="@Model.EMAIL" disabled readonly />
                            </div>
                            <small class="text-muted">Không thể thay đổi email.</small>
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.NAME, "Họ và tên", new { @class = "small mb-1 font-weight-bold text-success" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white"><i class="fas fa-user text-success"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.NAME, new { @class = "form-control", @placeholder = "Nhập họ tên của bạn..." })
                            </div>
                            @Html.ValidationMessageFor(m => m.NAME, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.SDT, "Số điện thoại", new { @class = "small mb-1 font-weight-bold text-success" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white"><i class="fas fa-phone text-success"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", @placeholder = "Nhập số điện thoại..." })
                            </div>
                            @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.DIACHI, "Địa chỉ nhận hàng", new { @class = "small mb-1 font-weight-bold text-success" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-white"><i class="fas fa-map-marker-alt text-success"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control", @placeholder = "Số nhà, đường, phường, quận..." })
                            </div>
                            @Html.ValidationMessageFor(m => m.DIACHI, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-arrow-left mr-1"></i> Quay lại trang chủ
                            </a>
                            <button type="submit" class="btn btn-success px-4 shadow">
                                <i class="fas fa-save mr-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>

                <div class="card-footer text-center py-3">
                    <div class="small text-muted">Bookom Bookstore - Cập nhật thông tin nhanh chóng</div>
                </div>
            </div>
        </div>
    </div>
</div>