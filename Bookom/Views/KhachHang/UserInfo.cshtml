@model Bookom.Models.ACCOUNT
@{
    ViewBag.Title = "Chỉnh sửa thông tin tài khoản";
}

<div class="container mt-4">
    <div class="card shadow p-4 col-md-6 offset-md-3">
        <h3 class="text-center mb-4">Chỉnh sửa thông tin</h3>

        @using (Html.BeginForm("Edit", "KhachHang", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EMAIL)

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.NAME, "Họ tên")
                @Html.TextBoxFor(m => m.NAME, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.SDT, "Số điện thoại")
                @Html.TextBoxFor(m => m.SDT, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.DIACHI, "Địa chỉ")
                @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control" })
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a href="@Url.Action("UserInfo", "KhachHang")" class="btn btn-secondary">Hủy</a>
            </div>
        }
    </div>
</div>
