@model IEnumerable<Bookom.Models.HOADON>

@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4 border-left-success">
    <div class="card-header py-3 bg-success">
        <h6 class="m-0 font-weight-bold text-white">LỊCH SỬ ĐƠN HÀNG CỦA BẠN</h6>
    </div>
    <div class="card-body">

        @if (Model.Count() == 0)
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-basket text-gray-300 mb-3" style="font-size: 3rem;"></i>
                <p>Bạn chưa có đơn hàng nào.</p>
                <a href="@Url.Action("SanPham", "Home")" class="btn btn-success">Mua sắm ngay</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="bg-light text-success font-weight-bold">
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Ngày đặt</th>
                            <th>Người nhận</th>
                            <th>Tổng tiền</th>
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center font-weight-bold">#@item.MAHD</td>

                                <td>@String.Format("{0:dd/MM/yyyy}", item.NGAYLAP)</td>

                                <td>@(item.KHACHHANG != null ? item.KHACHHANG.TENKH : "Khách vãng lai")</td>

                                <td class="text-danger font-weight-bold">
                                    @{
                                        // Vì trong HOADON không có cột TongTien, ta phải tính từ CT_HOADON
                                        decimal tongTien = 0;
                                        if (item.CT_HOADON != null)
                                        {
                                            tongTien = item.CT_HOADON.Sum(x => (x.DONGIA ?? 0) * (x.SOLUONG ?? 0));
                                        }
                                    }
                                    @String.Format("{0:0,0}", tongTien) VNĐ
                                </td>

                                <td class="text-center">
                                    <a href="@Url.Action("ChiTietDonHang", "KhachHang", new { id = item.MAHD })" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>