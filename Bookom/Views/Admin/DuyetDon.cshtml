@model IEnumerable<Bookom.Models.HOADON>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-primary">DANH SÁCH ĐƠN HÀNG</h2>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách Hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tình trạng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.MAHD</td>

                            <td>
                                @if (item.KHACHHANG != null)
                                {
                                    <b>@item.KHACHHANG.TENKH</b> <br />
                                    <small>SĐT: @item.KHACHHANG.SDT</small>
                                }
                                else
                                {
                                    <span>Khách vãng lai</span>
                                }
                            </td>

                            <td>@String.Format("{0:dd/MM/yyyy}", item.NGAYLAP)</td>

                            <td class="text-center">
                                @if (item.TINHTRANG == 1)
                                {
                                    <span class="badge badge-success px-2 py-1">Đã xác nhận</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger px-2 py-1">Chờ duyệt</span>
                                }
                            </td>

                            <td class="text-center">
                                @if (item.TINHTRANG == 0 || item.TINHTRANG == null)
                                {
                                    <a href="@Url.Action("DuyetDon", "Admin", new { id = item.MAHD })"
                                       class="btn btn-warning btn-sm shadow-sm"
                                       onclick="return confirm('Xác nhận duyệt đơn hàng này?');">
                                        <i class="fas fa-check"></i> Duyệt đơn
                                    </a>
                                }
                                else
                                {
                                    <span class="text-success font-weight-bold">
                                        <i class="fas fa-check-circle"></i> Hoàn tất
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>