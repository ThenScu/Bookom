@model IEnumerable<Bookom.Models.HOADON>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-primary">DANH SÁCH ĐƠN HÀNG</h2>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái & Hành động</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.MAHD</td>

                            <td>
                                @if (item.KHACHHANG != null)
                                {
                                    <b>@item.KHACHHANG.TENKH</b> <br />
                                    <small>@item.KHACHHANG.SDT</small>
                                }
                                else
                                { <span>Khách vãng lai</span>}
                            </td>

                            <td>@String.Format("{0:dd/MM/yyyy}", item.NGAYLAP)</td>

                            <td class="text-danger font-weight-bold">
                                @{
                                    decimal tongTien = 0;
                                    if (item.CT_HOADON != null)
                                    {
                                        tongTien = item.CT_HOADON.Sum(x => (x.DONGIA ?? 0) * (x.SOLUONG ?? 0));
                                    }
                                }
                                @String.Format("{0:0,0}", tongTien)
                            </td>

                            <td class="text-center">
                                @if (item.TINHTRANG == 1)
                                {
                                    // 1. Nếu đã duyệt -> Hiện chữ xanh "Đã xong"
                                    <span class="badge badge-success px-3 py-2">
                                        <i class="fas fa-check-circle"></i> Đã duyệt đơn
                                    </span>
                                }
                                else
                                {
                                    // 2. Nếu chưa duyệt -> Hiện nút bấm màu vàng
                                    // Bấm vào đây nó sẽ chạy hàm DuyetDon(id) rồi quay lại trang này
                                    <a href="@Url.Action("DuyetDon", "Admin", new { id = item.MAHD })"
                                       class="btn btn-warning btn-sm shadow-sm font-weight-bold"
                                       onclick="return confirm('Bạn muốn xác nhận đơn hàng này?');">
                                        <i class="fas fa-shipping-fast"></i> Duyệt đơn ngay
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>